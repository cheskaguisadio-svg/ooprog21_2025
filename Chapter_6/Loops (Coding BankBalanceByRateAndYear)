import java.util.Scanner;

public class BankInterestCalculator {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Enter initial bank balance > ");
        double initialBalance = input.nextDouble();

        // Interest rates: 2%, 3%, 4%, 5%
        double[] interestRates = {0.02, 0.03, 0.04, 0.05};

        // Outer loop → interest rates
        for (int i = 0; i < interestRates.length; i++) {
            double rate = interestRates[i];
            double balance = initialBalance;

            System.out.printf("%nWith an initial balance of %.1f at an interest rate of %.2f%n",
                    initialBalance, rate);

            // Inner loop → years (1 to 4)
            for (int year = 1; year <= 4; year++) {
                balance += balance * rate;
                System.out.printf("After year %d balance is %.4f%n", year, balance);
            }
        }

        input.close();
    }
}
